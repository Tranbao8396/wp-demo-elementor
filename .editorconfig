[*.{js,py,scss}]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.pug]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2